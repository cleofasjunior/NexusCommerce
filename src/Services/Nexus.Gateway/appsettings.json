{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "stock-route": {
        "ClusterId": "stock-cluster",
        "Match": {
          "Path": "/api/products/{**catch-all}"
        }
      },
      "sales-route": {
        "ClusterId": "sales-cluster",
        "Match": {
          "Path": "/api/orders/{**catch-all}"
        }
      },
      "auth-route": {
        "ClusterId": "auth-cluster",
        "Match": {
          "Path": "/api/auth/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "stock-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:6001"
          }
        }
      },
      "sales-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5102"
          }
        }
      },
      "auth-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5103"
          }
        }
      }
    }
  }
}